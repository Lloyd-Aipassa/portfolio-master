<style>
	body {
		margin: 0;
		min-height: 100vh;
		background: linear-gradient(45deg, #0a192f, #112240);
		position: relative;
	}

	/* Grid patroon */
	.grid {
		position: fixed;
		width: 200%;
		height: 200%;
		top: -50%;
		left: -50%;
		background-image: linear-gradient(
				rgba(100, 255, 218, 0.05) 1px,
				transparent 1px
			),
			linear-gradient(
				90deg,
				rgba(100, 255, 218, 0.05) 1px,
				transparent 1px
			);
		background-size: 30px 30px;
		transform: perspective(500px) rotateX(45deg);
		animation: grid-move 20s linear infinite;
	}

	@keyframes grid-move {
		0% {
			transform: perspective(500px) rotateX(45deg)
				translateY(0);
		}
		100% {
			transform: perspective(500px) rotateX(45deg)
				translateY(30px);
		}
	}

	/* Gloeiende orbs */
    .orb {
      position: absolute;
      border-radius: 50%;
      filter: blur(40px);
      opacity: 0.3;
      animation: complex-float 15s infinite;
    }

    .orb:nth-child(1) {
      width: 300px;
      height: 300px;
      background: #00ff8c;
      top: 20%;
      left: 20%;
      animation: complex-float 20s infinite;
    }

    .orb:nth-child(2) {
      width: 200px;
      height: 200px;
      background: #0066ff;
      bottom: 30%;
      right: 20%;
      animation: complex-float-alt 25s infinite;
    }

    .orb:nth-child(3) {
      width: 150px;
      height: 150px;
      background: #ff00ff;
      top: 40%;
      left: 30%;
      animation: complex-float-diagonal 18s infinite;
    }

	/* Tech lijnen */
	.tech-lines {
		position: fixed;
		width: 100%;
		height: 100%;
		background: repeating-linear-gradient(
				90deg,
				rgba(100, 255, 218, 0.03) 0px,
				rgba(100, 255, 218, 0.03) 1px,
				transparent 1px,
				transparent 30px
			),
			repeating-linear-gradient(
				0deg,
				rgba(100, 255, 218, 0.03) 0px,
				rgba(100, 255, 218, 0.03) 1px,
				transparent 1px,
				transparent 30px
			);
	}

    @keyframes complex-float {
      0% {
        transform: translate(0, 0) scale(1);
      }
      25% {
        transform: translate(100px, 50px) scale(1.1);
      }
      50% {
        transform: translate(50px, -100px) scale(0.9);
      }
      75% {
        transform: translate(-100px, 80px) scale(1.1);
      }
      100% {
        transform: translate(0, 0) scale(1);
      }
    }

    @keyframes complex-float-alt {
      0% {
        transform: translate(0, 0) rotate(0deg) scale(1);
      }
      33% {
        transform: translate(-120px, 60px) rotate(120deg) scale(1.2);
      }
      66% {
        transform: translate(80px, -90px) rotate(240deg) scale(0.8);
      }
      100% {
        transform: translate(0, 0) rotate(360deg) scale(1);
      }
    }

    @keyframes complex-float-diagonal {
      0% {
        transform: translate(0, 0) scale(1);
      }
      25% {
        transform: translate(150px, 150px) scale(1.2);
      }
      50% {
        transform: translate(0, 200px) scale(0.9);
      }
      75% {
        transform: translate(-150px, -100px) scale(1.1);
      }
      100% {
        transform: translate(0, 0) scale(1);
      }
    }



</style>


<div class="tech-lines"></div>

<div class="orb"></div>
<div class="orb"></div>
<div class="orb"></div>


