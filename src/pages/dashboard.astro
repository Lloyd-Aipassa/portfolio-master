import Layout from "../layouts/Layout.astro";
import Background from "../components/Background.astro";

async function CoinData() {
	try {
		const response = await fetch(
			"https://backend-portfolio-coin.lloyd-aipassa.deno.net/coins",
			{
				method: "GET",
				headers: {
					"Content-Type": "application/json",
				},
			}
		);

		if (!response.ok) {
			throw new Error(
				`HTTP error! Status: ${response.status}`
			);
		}

		const data = await response.json();

		return data;
	} catch (error) {
		console.error(
			"Er is een fout opgetreden tijdens het ophalen van de gegevens:",
			error
		);
	}
}

// CoinData();
const DBdata = await CoinData();
const coinIds = DBdata.map((coin) => coin.coinName);

const options = {
	method: "GET",
	headers: {
		accept: "application/json",
		"x-cg-demo-api-key": import.meta.env.PUBLIC_CG_DEMO_API_KEY,
	},
};

async function fetchCoinData() {
	const response = await fetch(
		`https://api.coingecko.com/api/v3/coins/markets?vs_currency=eur&ids=${coinIds}`,
		options
	);

	if (!response.ok) {
		throw new Error(`HTTP error! Status: ${response.status}`);
	}

	const data = await response.json();
	return data;
}

// Haal de coin data op
const coinData = await fetchCoinData();

// Voeg de arrays samen op basis van `coinName` van DBdata en `id` van coinData
const mergedData = DBdata.map((dbCoin) => {
	const matchingCoin = coinData.find(
		(apiCoin) => apiCoin.id === dbCoin.coinName.toLowerCase()
	);

	return {
		coinName: dbCoin.coinName,
		id: dbCoin._id,
		amount: dbCoin.amount,
		current_price: matchingCoin.current_price,
		name: matchingCoin.name,
		coinID: matchingCoin.id,
		image: matchingCoin.image,
	};
});

// Bereken het totaalbedrag
const totalValue = mergedData.reduce((acc, coin) => {
	return acc + coin.amount * coin.current_price;
}, 0);
