	<main>
		<div class="flipkaart-container">
			<div class="flipkaart">
				<div class="de-voorkant">
					<h2>Totale waarde?</h2>
				</div>
				<div class="de-achterkant">
					<h2>
						€{totalValue.toFixed(2)}
					</h2>
				</div>
			</div>
		</div>
		<!-- <h2>Totale waarde:<br /> €{totalValue.toFixed(2)}</h2> -->
		<ul class="coin-grid">
			{
				mergedData.map((coin, index) => (
					<li class="coin-card">
						<p class="coin-name">
							{coin.name}
						</p>
						<img
							class="coin-image"
							src={coin.image}
							alt={coin.name}
						/>

						<p class="coin-total">
							Totaal: €
							{(
								coin.current_price *
								coin.amount
							).toFixed(2)}
						</p>
						<p class="coin-details">
							Aantal in bezit:{" "}
							{coin.amount}
						</p>
						{/* <p class="coin-details">
							Price: €
							{coin.current_price}
						</p> */}

						<a
							class="coin-link"
							href={coin.coinID}
						>
							Info{" "}
							<img
								src="/icon-information.svg"
								width="25"
								height="25"
								alt="icon information"
							/>
						</a>
						<button class="update-coin-btn">
							Update{" "}
							<img
								src="/icon-update.svg"
								width="13"
								height="13"
								alt="icon update"
							/>
						</button>
						<button
							data-coin-id={coin.id}
							class="delete-coin-btn"
						>
							Verwijderen{" "}
							<img
								src="/icon-delete.svg"
								width="20"
								height="20"
								alt="delete icon"
							/>
						</button>

						<form
							class="update-form hidden-form"
							hidden
							data-coin-name={
								coin.coinName
							}
						>
							<input
								type="hidden"
								name="coinName"
								value={
									coin.coinName
								}
							/>
							<label
								for={`amount-${index}`}
							>
								Nieuw Aantal:
							</label>
							<input
								type="number"
								id={`amount-${index}`}
								name="amount"
								required
								placeholder="Nieuw aantal munten"
							/>
							<button
								class="update-coin-btn submit"
								type="submit"
							>
								Bijwerken
							</button>
						</form>
						<div class="result" />
					</li>
				))
			}
		</ul>
	</main>
</Layout>

