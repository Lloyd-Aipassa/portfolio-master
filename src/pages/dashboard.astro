<script>
	document.querySelectorAll(".update-form").forEach((form) => {
		form.addEventListener("submit", async function (e) {
			e.preventDefault();
			const coinName = this.getAttribute("data-coin-name");
			const amount = this.querySelector(
				'input[name="amount"]'
			).value;
			const resultDiv = this.nextElementSibling;

			try {
				const response = await fetch(
					`https://backend-portfolio-coin.lloyd-aipassa.deno.net/coins/${encodeURIComponent(coinName)}`,
					{
						method: "PATCH",
						headers: {
							"Content-Type":
								"application/json",
						},
						body: JSON.stringify({
							amount: Number(amount),
						}),
						credentials: "include",
					}
				);

				const data = await response.json();

				if (response.ok) {
					resultDiv.innerHTML = `Succes: Bedrag voor "${data.coinName}" bijgewerkt naar ${data.amount}`;
					resultDiv.style.color = "green";
					setTimeout(() => {
						location.reload();
					}, 2000);
				} else {
					resultDiv.innerHTML = `Fout: ${data.message}`;
					resultDiv.style.color = "red";
				}
			} catch (error) {
				console.error("Error:", error);
				resultDiv.innerHTML = `Netwerkfout: ${error.message}`;
				resultDiv.style.color = "red";
			}
		});
	});
</script>

<script>
	document.addEventListener("DOMContentLoaded", () => {
		const updateButtons =
			document.querySelectorAll(".update-coin-btn");

		updateButtons.forEach((button, index) => {
			button.addEventListener("click", () => {
				// Select the form associated with this button using index or coin name
				const form = button
					.closest("li")
					.querySelector(".update-form");

				// Toggle the "hidden" class for the form
				if (form) {
					form.classList.toggle("hidden");
				}
			});
		});
	});
</script>

