---
export const prerender = true
import Layout from "../layouts/Layout.astro";
import Background from "../components/Background.astro";


---
<script>
	const fetchTopCoins = async () => {
		const backendUrl = 'https://backend-portfolio-coin.lloyd-aipassa.deno.net/top-coins';
		const vs_currency = 'eur';
		const order = 'market_cap_desc';
		const per_page = 250;
		let topCoins = [];

		document.getElementById('loadingMessage').style.display = 'block'; // Show loading message

		try {
			for (let page = 1; page <= 4; page++) {
				const response = await fetch(
					`${backendUrl}?vs_currency=${vs_currency}&order=${order}&per_page=${per_page}&page=${page}`
				);

				if (!response.ok) {
					throw new Error(`Backend error: ${response.status}`);
				}

				const data = await response.json();
				topCoins = [...topCoins, ...data];
			}

			document.getElementById('loadingMessage').style.display = 'none'; // Hide loading message

			const tableBody = document.querySelector('#cryptoTable tbody');
			topCoins.forEach((coin, index) => {
				const row = document.createElement('tr');

				row.innerHTML = `
					<td style="text-align: center;">${index + 1}</td>
					<td style="text-align: center; padding-top: 2px"><img src="${coin.image}" alt="${coin.name}" width="18" height="18"></td>
					<td style="text-align: center;">${coin.symbol.toUpperCase()}</td>
					<td style="text-align: center;">€${coin.current_price.toLocaleString()}</td>
					<td style="text-align: center;">€${coin.market_cap.toLocaleString()}</td>
				`;

				tableBody.appendChild(row);
			});
		} catch (error) {
			console.error('Error fetching top coins:', error);
			document.getElementById('loadingMessage').textContent = 'Fout bij laden data. Zorg ervoor dat je backend draait.';
		}
	};

	document.addEventListener('DOMContentLoaded', fetchTopCoins);
</script>

<Layout title="Home">
	<Background />
	<main>
		<h1>Top 1000 Cryptocurrencies</h1>
		<table id="cryptoTable">
			<thead>
				<tr>
					<th>#</th>
					<th>image</th>
					<th>Symbol</th>
					<th>Price (USD)</th>
					<th>Market Cap (USD)</th>
				</tr>
			</thead>
			<tbody>
				<!-- Data will be injected here -->
			</tbody>
		</table>
		<p id="loadingMessage" class="loading">Loading top 1000 coins...</p>
	</main>
</Layout>

