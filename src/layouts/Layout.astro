---
interface Props {
	title: string;
}

// import { ViewTransitions } from 'astro:transitions';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!-- <ViewTransitions /> -->
		<meta name="generator" content={Astro.generator} />
	
		<title>{title}</title>
	</head>
	<body>
		<header>
			<a href="/"><img class="logo" src="/logo-portfolio.jpg" alt="logo" /></a>
			<button id="hamburger" class="hamburger">â˜°</button>
			<ul id="mobileMenu" class="mobile-menu">
				<li>
					<a href="/top1000">Top 1000</a>
				</li>
				<li>
					<a href="/dashboard">dashboard</a>
				</li>
				<li>
					<a href="/zoeken">zoeken</a>
				</li>
				<li>
					<button class="delete-coin-btn" id="logoutButton">Uitloggen</button>
				</li>
			</ul>
		</header>
		<slot />
		<script is:inline src="/javascript/logout.js"></script>
		<script is:inline>
			const hamburger = document.getElementById('hamburger');
			const mobileMenu = document.getElementById('mobileMenu');

			hamburger.addEventListener('click', () => {
				mobileMenu.classList.toggle('open');
				hamburger.classList.toggle('active');
			});

			// Close menu when a link is clicked
			const menuLinks = mobileMenu.querySelectorAll('a, button');
			menuLinks.forEach(link => {
				link.addEventListener('click', () => {
					mobileMenu.classList.remove('open');
					hamburger.classList.remove('active');
				});
			});
		</script>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	* {
		margin: 0;
		box-sizing: border-box;
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
	}


	header {
		padding: 40px;
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	header ul {
		height: 30px;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 20px;
		list-style: none;
	}

	header ul li a {
		color: white;
		text-decoration: none;
		text-transform: capitalize;
	}
	header ul li a:hover {
		color: rgba(255, 77, 77, 0.8);
		text-decoration: none;
		text-transform: capitalize;
	}

	header img {
		border-radius: 50%;
		width: 60px;
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	.delete-coin-btn,
	.update-coin-btn {
		background-color: #ff4d4d;
		color: white;
		border: none;
		padding: 10px 15px;
		border-radius: 5px;
		font-size: 14px;
		font-weight: bold;
		text-transform: uppercase;
		cursor: pointer;
		transition: all 0.3s ease;
		box-shadow: 0 0 10px rgba(255, 77, 77, 0.5);
		position: relative;
		overflow: hidden;
	}

	.update-coin-btn {
		box-shadow: 0 0 10px rgba(33, 198, 55, 0.5);
	}

	.delete-coin-btn::before,
	.update-coin-btn::before {
		content: "";
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			120deg,
			transparent,
			rgba(255, 255, 255, 0.3),
			transparent
		);
		transition: all 0.4s;
	}

	.delete-coin-btn:hover,
	.update-coin-btn:hover {
		background-color: #ff3333;
		transform: translateY(-2px);
		box-shadow: 0 0 15px rgba(255, 77, 77, 0.7);
	}

	.update-coin-btn:hover {
		box-shadow: 0 0 10px rgba(33, 198, 55, 0.5);
	}

	.delete-coin-btn:hover::before,
	.update-coin-btn:hover::before {
		left: 100%;
	}

	.delete-coin-btn:active,
	.update-coin-btn:active {
		transform: translateY(0);
		box-shadow: 0 0 5px rgba(255, 77, 77, 0.5);
	}

	.delete-coin-btn:focus,
	.update-coin-btn:focus {
		outline: none;
		box-shadow:
			0 0 0 3px rgba(255, 77, 77, 0.5),
			0 0 10px rgba(255, 77, 77, 0.5);
	}

	.hamburger {
		display: none;
		background: none;
		border: none;
		color: white;
		font-size: 28px;
		cursor: pointer;
		transition: all 0.3s ease;
	}

	.hamburger.active {
		color: #ff4d4d;
	}

	.mobile-menu {
		display: flex !important;
	}

	@media (max-width: 720px) {
		header {
			padding: 20px 24px;
			position: relative;
		}

		header img {
			width: 50px;
		}

		.hamburger {
			display: block;
		}

		.mobile-menu {
			position: fixed;
			top: 0;
			right: -100%;
			width: 70%;
			height: 100vh;
			background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
			flex-direction: column;
			padding-top: 80px;
			padding-left: 30px;
			padding-right: 30px;
			gap: 20px;
			list-style: none;
			transition: right 0.3s ease;
			z-index: 1000;
		}

		.mobile-menu.open {
			right: 0;
		}

		.mobile-menu li {
			width: 100%;
		}

		.mobile-menu li a {
			display: block;
			padding: 15px;
			color: white;
			text-decoration: none;
			font-size: 18px;
			border-radius: 5px;
			transition: all 0.3s ease;
		}

		.mobile-menu li a:hover {
			background: rgba(255, 77, 77, 0.2);
			color: #ff4d4d;
		}

		.mobile-menu li button {
			width: 100%;
			text-align: center;
		}

		header ul {
			display: none;
		}
	}
</style>
