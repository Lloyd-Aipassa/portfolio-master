---
interface Props {
	title: string;
}

// import { ViewTransitions } from 'astro:transitions';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!-- <ViewTransitions /> -->
		<meta name="generator" content={Astro.generator} />
	
		<title>{title}</title>
	</head>
	<body>
		<header>
			<a href="/"><img class="logo" src="/logo-portfolio.jpg" alt="logo" /></a>
		
			<ul>
				<li>
					<a href="/top1000">Top 1000</a>
				</li>
				<li>
					<a href="/dashboard">dashboard</a>
				</li>
				<li>
					<a href="/zoeken">zoeken</a>
				</li>
				<li>
					<button class="delete-coin-btn" id="logoutButton">Uitloggen</button>
				</li>
			</ul>
		</header>
		<slot />
		<script is:inline src="/javascript/logout.js"></script>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	* {
		margin: 0;
		box-sizing: border-box;
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
	}


	header {
		padding: 40px;
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	header ul {
		height: 30px;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 20px;
		list-style: none;
	}

	header ul li a {
		color: white;
		text-decoration: none;
		text-transform: capitalize;
	}
	header ul li a:hover {
		color: rgba(255, 77, 77, 0.8);
		text-decoration: none;
		text-transform: capitalize;
	}

	header img {
		border-radius: 50%;
		width: 60px;
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	.delete-coin-btn,
	.update-coin-btn {
		background-color: #ff4d4d;
		color: white;
		border: none;
		padding: 10px 15px;
		border-radius: 5px;
		font-size: 14px;
		font-weight: bold;
		text-transform: uppercase;
		cursor: pointer;
		transition: all 0.3s ease;
		box-shadow: 0 0 10px rgba(255, 77, 77, 0.5);
		position: relative;
		overflow: hidden;
	}

	.update-coin-btn {
		box-shadow: 0 0 10px rgba(33, 198, 55, 0.5);
	}

	.delete-coin-btn::before,
	.update-coin-btn::before {
		content: "";
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			120deg,
			transparent,
			rgba(255, 255, 255, 0.3),
			transparent
		);
		transition: all 0.4s;
	}

	.delete-coin-btn:hover,
	.update-coin-btn:hover {
		background-color: #ff3333;
		transform: translateY(-2px);
		box-shadow: 0 0 15px rgba(255, 77, 77, 0.7);
	}

	.update-coin-btn:hover {
		box-shadow: 0 0 10px rgba(33, 198, 55, 0.5);
	}

	.delete-coin-btn:hover::before,
	.update-coin-btn:hover::before {
		left: 100%;
	}

	.delete-coin-btn:active,
	.update-coin-btn:active {
		transform: translateY(0);
		box-shadow: 0 0 5px rgba(255, 77, 77, 0.5);
	}

	.delete-coin-btn:focus,
	.update-coin-btn:focus {
		outline: none;
		box-shadow:
			0 0 0 3px rgba(255, 77, 77, 0.5),
			0 0 10px rgba(255, 77, 77, 0.5);
	}

	@media (max-width: 720px) {
		header {
			padding: 20px 24px;
			flex-direction: column;
			gap: 20px;
		}

		header img {
			width: 50px;
		}

		header ul {
			flex-direction: column;
			width: 100%;
			gap: 10px;
			height: auto;
		}

		header ul li {
			width: 100%;
		}

		header ul li a,
		header ul li button {
			display: block;
			width: 100%;
			text-align: center;
			padding: 10px;
		}

		header ul li button {
			padding: 10px 15px;
		}
	}
</style>
